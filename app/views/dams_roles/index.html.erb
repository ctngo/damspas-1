<table class="table table-striped">
  <thead>
    <tr>
      <td>ID</td>
      <td>Code</td>
      <td>Description</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
  </thead>

  <tbody>
    <% @dams_roles.each do |dams_role| %>

      <tr>
        <td class="id"><%= dams_role.id%></td>
        <td class="code"><%= dams_role.code %></td>
        <td class="value"><%= link_to dams_role.value, dams_role_path(dams_role) %></td>
        <td class="edit"><%= link_to "Edit", edit_dams_role_path(dams_role) %></td>
        <td class="delete"><%= link_to "Delete", dams_role_path(dams_role), :method => "delete" %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<%= link_to "Create New Dams Role", new_dams_role_path, class: 'btn' %>
