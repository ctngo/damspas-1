<% if @mads_occupation.errors.any? %>

	<div class="alert alert-block alert-error">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<h4>The form contains <%= pluralize(@mads_occupation.errors.count, "error") %></h4>
		<ul>
		<% @mads_occupation.errors.full_messages.each do |msg| %>
			<li><%= msg %></li> 
		<% end %>
		</ul>
	</div>

<% end %>
