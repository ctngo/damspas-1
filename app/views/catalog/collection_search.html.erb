<div class="row-fluid">
  <div id="sidebar" class="span3">
    <%= render :partial=>'facets' %>
  </div>
  <div id="content" class="span9">
    <% @page_title = 'Browse By Collection' %>
    <h3>
    Browse by Collection<%if !@current_unit.blank?%>: <%=@current_unit%><%end%>
    </h3>

    <div class="alert alert-info">
      Current collections are listed below.  Click on the image or link below to see the complete collection description.
    </div>

    <%= render 'sort_and_per_page' %>
    <%= render :partial => 'constraints' %>
    <h3 class="hide-text"><%= t('blacklight.search.search_results') %></h3>
    <%= render_document_index %>
    <%= render 'results_pagination' %>
  </div>
</div>
