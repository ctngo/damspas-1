<% @page_title =  "Edit Iconography" %>

<div class="row-fluid">
	<div class="span10 offset1">
	
		<h2>Edit Iconography</h2>
		
		<%= form_for @dams_iconography do |f| %>
		
			<%= render 'error_messages', object: f.object %>
		
			<%= label_tag 'dams_iconography[name][]', "Authoritative Label" %>
			<%= text_field_tag 'dams_iconography[name][]', @dams_iconography.name[0], class: "input-block-level" %>
		
			<%= label_tag 'dams_iconography[externalAuthority][]', "ExternalAuthority" %>
			<%= text_field_tag 'dams_iconography[externalAuthority][]', @dams_iconography.externalAuthority, class: "input-block-level" %>

			<%= label_tag 'dams_iconography[scheme][]', "scheme" %>
			<%= select_tag 'dams_iconography[scheme][]', options_for_select(@mads_schemes, :selected => @scheme_id ) %>
			<%= label_tag 'dams_iconography[elementValue][]', "IconographyElement" %>
			<%= text_field_tag 'dams_iconography[elementValue][]', @dams_iconography.elementValue, class: "input-block-level" %>
							
			<div class="form-actions">
				<button type="submit" class="btn btn-primary pull-right">Save changes</button>
				<%= link_to "Cancel", dams_iconography_path(@dams_iconography), class: "btn btn-link pull-right" %>
			</div>
				
		
		<%end%>
	
	</div>
</div>
