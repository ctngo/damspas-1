  <%#= label_tag 'dams_object[titlePartNumber][]', "PartNumber" %>
  <%#= text_field_tag 'dams_object[titlePartNumber][]' %>    
   <%#= label_tag 'dams_object[titleNonSort][]', "NonSort" %>
