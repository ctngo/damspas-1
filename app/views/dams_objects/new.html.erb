<%= javascript_tag "var baseURL = '#{url_for( :controller => 'get_data', :only_path => false )}';" %>
<script>
$(document).ready(function() {
	loadCreateNewObjectOption();
});
</script>
<h1>Create a new Dams Object</h1>
<div class="dams-viewer">
<%= form_for @dams_object , :html => { :onsubmit => 'processForm();'} do |f| %>

  <%= render :partial => 'shared/edit_fields/title_form' , :locals => {:f => f}%>

  <%= render :partial => 'shared/edit_fields/type_of_resource_form', :locals => {:f => f, :object => @dams_object, :object_type => "dams_object"}%>

  <%= render :partial => 'shared/edit_fields/date_form' , :locals => {:f => f}%>
         
  <%= render :partial => 'shared/edit_fields/unit_form' , :locals => {:f => f}%>
     
  <%= render :partial => 'shared/edit_fields/collections_form', :locals => {:f => f}%>

  <%= render :partial => 'shared/edit_fields/language_form' , :locals => {:f => f}%>
      
  <%= render :partial => 'shared/edit_fields/notes_form' , :locals => {:f => f}%>
        
  <%= render :partial => 'shared/edit_fields/relationship_form' , :locals => {:f => f}%>
  
  <%= render :partial => 'shared/edit_fields/complex_subjects_form' , :locals => {:f => f}%> 
       
  <%= render :partial => 'shared/edit_fields/simple_subjects_form' , :locals => {:f => f}%>
    
  <%= render :partial => 'shared/edit_fields/creator_form' , :locals => {:f => f}%>
  
  <%= render :partial => 'shared/edit_fields/names_form' , :locals => {:f => f}%>
      
  <%= render :partial => 'shared/edit_fields/rights_form' , :locals => {:f => f}%>
    
  <%#= render :partial => 'shared/edit_fields/related_resource_form' , :locals => {:f => f}%>

	<h3>Related Resource</h3>
	<div id="relatedResourceSection">
	   <%= f.fields_for :relatedResource do |relResource| %>
	   	 <%= relResource.label :type, "Type" %>
	     <%= relResource.text_field :type , :value => "", class: "input-block-level" %>    
	     <%= relResource.label :uri, "URI" %>
	     <%= relResource.text_field :uri, :value => "", class: "input-block-level" %>
	     <%= relResource.label :description, "Description" %>
	     <%= relResource.text_field :description, :value => "", class: "input-block-level" %>                
	   <% end %>
	</div>
  
  <%= render :partial => 'shared/edit_fields/cartographics_form' , :locals => {:f => f}%>  

  <br>
  <!--input type="text" id="test" data-provide="typeahead" data-items="3" data-source='<%= @autocomplete_items %>'-->

  <%=f.submit "Save", class: "btn btn-primary" %>
  <%= link_to "Cancel", dams_objects_path, class: "btn btn-primary" %>   
<%end%>
</div>


