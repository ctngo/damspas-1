<%
	videoURL = nil

	prefix = (defined?(componentIndex)) ? "component_#{componentIndex}_" : ''
	fieldData = @document["#{prefix}files_tesim"]

	if fieldData != nil
		fieldData.each do |datum|
			files = JSON.parse(datum)
			if files['use'] == 'video-service'
				videoPath = files['sourcePath'].sub(ViewOptions::VIDEO_PARENT_DIRECTORY,'')
				videoFilename = files['sourceFileName']
				videoURL = ViewOptions::VIDEO_PARTIAL_URL + videoPath + '/' + videoFilename
			end
		end
	end
%>

<% if videoURL != nil %>

	<div id="dams-video">Loading the player...</div>

	<script src="//libraries.ucsd.edu/jwplayer/jwplayer.js"></script>
	<script src="//libraries.ucsd.edu/jwplayer/key.js"></script>
	<script type="text/javascript">
		jwplayer("dams-video").setup({
			playlist:
			[{
				sources:
				[
					{file: "rtmp://<%=videoURL%>"},
					{file: "http://<%=videoURL%>/playlist.m3u8"}
				]
			}],
			width: "100%",
			aspectratio: "16:9",
			rtmp: {bufferlength: 3},
			fallback: false
		});
	</script>

<% end %>