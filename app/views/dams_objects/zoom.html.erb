<%
  @page_title =  "Object | #{grabTitle}"
  @cmp = params['cmp']
  files_key = (@cmp != '0') ? "component_#{@cmp}_files_tesim" : "files_tesim"
  @files = @document[files_key] || []
  @files.each do |f|
    json = JSON.parse(f)
    use = json['use']
    if use == 'image-source' || use == 'document-service'
      @file_id = json['id']
      @quality = json['quality']
    end
  end
  if @quality.blank? %>
  <p>Error: unable to find zoomable image.</p>
<%
  else
    dim = @quality.split("x")
    p1 = @object[0,2]
    p2 = @object[2,2]
    dir = p1 + "/" + p2 + "/" + @object
    dir += "-#{@cmp}" if @cmp != '0'
%>
  <style type="text/css">
    html, body, #map {
      width: 100%; height: 100%; padding: 0; margin: 0;
    }
  </style>
  <div id="map"></div>
  <script type="text/javascript">
    var map = L.map('map').setView(new L.LatLng(0,0), 0);
    L.tileLayer.zoomify('<%=Rails.configuration.zoomify_baseurl%><%=dir%>/', { 
      width: <%=dim[0]%>, height: <%=dim[1]%>
    }).addTo(map);
  </script>
<% end %>
