<% if fileType %>
	<div class="simple-object">
		<% case fileType %>
		<% when 'image-service' %>
			<%= render :partial => 'image_viewer', :locals => {:displayFilePath => display_file_path, :zoomFilePath  => zoom_file_path, :filePath => service_file_path, :pdfFilePath => pdf_file_path} %>
		<% when 'audio-service' %>
			<%= render :partial => 'audio_viewer', :locals => {:filePath => service_file_path} %>
		<% when 'video-service' %>
			<%= render :partial => 'video_viewer', :locals => {:filePath => service_file_path, :icon => display_file_path} %>
		<% when 'document-service' %>
			<%= render :partial => 'metadata_data_file', :locals => {:fileName => service_file} %>
			<%= render :partial => 'data_viewer', :locals => {:filePath => service_file_path, :objectType => 'simple'} %>
		<% when 'data-service' %>
			<%= render :partial => 'metadata_data_file', :locals => {:fileName => service_file} %>
			<%= render :partial => 'data_viewer', :locals => {:filePath => service_file_path, :objectType => 'simple'} %>
		<% else %>
			<%= render :partial => 'default_viewer', :locals => {:objectType => 'simple'} %>
		<% end %>
	</div>
<% end %>