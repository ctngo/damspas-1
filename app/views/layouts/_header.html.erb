<header>
  <section class="container-fluid ucsd-head visible-desktop">
    <a class="pull-right ucsd-head-logo" href="http://www.ucsd.edu"><%=image_tag "/assets/ucsd/logo-ucsd-header-xl.png", :alt => "UC San Diego" %></a>
    <%= link_to 'Digital Collections', root_path, :class => 'brand' %>
  </section>
  <section class="navbar navbar-inverse">
    <div class="navbar-inner">

      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <%= link_to 'Digital Collections', root_path, :class => 'brand hidden-desktop' %>

      <nav class="nav-collapse collapse">

        <ul class="nav">
          <li><%= link_to 'Home', root_path %></li>

          <!-- Link to general browse by collection, format and topic page -->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Browse By <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Collection', dams_collections_path %></li>
              <li><%= link_to 'Format', catalog_facet_path("object_type_sim") %></li>
              <li><%= link_to 'Topic', catalog_facet_path("subject_topic_sim") %></li>
            </ul>
          </li>

          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to 'FAQ', faq_path %></li>
          <li><a href="#contact">Contact</a></li>

          <% if current_user  %>
            <li class="dropdown">
              <!-- Logged in as <%= current_user.uid %> -->
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Editor Tools <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Create Object', new_dams_object_path %></li>
	              <li><%= link_to 'Create Provenance Collection', new_dams_provenance_collection_path %></li>
                <!--<li><%= link_to 'Create Administrative Unit', new_dams_unit_path %></li>-->
                <li class="divider"></li>
                <li><%= link_to 'Sign Out', destroy_user_session_path %></li>
              </ul>
            </li>
          <% else %>
            <li>
              <%= link_to 'Sign In', new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </section>

  <% unless defined?(hideSearch) %>

    <section class="pull-right search-bar clearfix visible-desktop">
      <%= form_tag catalog_index_url, :method => :get, :class => 'form-search pull-right' do %>
        <% if @current_unit != nil %>
          <input type="hidden" name="f[unit_sim][]" value="<%=@current_unit.first%>"/>
        <% end %>
        <label class="hide-text" for="q">Search</label>
        <input type="text" placeholder="Search" name="q" id="q" class="input-medium search-query">
        <button class="btn btn-inverse" type="submit" id="search-button">
          <i class="icon-search icon-white"></i>
        </button>
      <% end %>
    </section>

    <section class="container-fluid mobile-search-bar clearfix hidden-desktop collapse111">
      <%= form_tag catalog_index_url, :method => :get, :class => 'form-search' do %>
        <div class="input-append">
          <input type="text" placeholder="Search" name="q" id="q" class="search-query">
          <button class="btn btn-inverse" type="submit" id="mobile-search-button">
            <i class="icon-search icon-white"></i>
          </button>
        </div>
      <% end %>
    </section>

	<%end%>

</header>
