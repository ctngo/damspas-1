<% if @document["relationship_json_tesim"] != nil %>

	<dt><%="Name".pluralize(@document["relationship_json_tesim"].count)%></dt>
	<dd>
		<ul class="unstyled">
			<% @document["relationship_json_tesim"].each { |relationship| rel = JSON.parse(relationship) %>
				<li><%=rel["name"]%> <i>(<%=rel["role"].join(",")%>)</i></li>
			<% } %>
		</ul>
	</dd>
<% end %>