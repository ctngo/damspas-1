<% @page_title =  "Object | #{render_document_show_field_value(:document=>@document, :field=>'title_tesim')}" %>

<div class="row-fluid">
	<div class="dams-breadcrumbs span12">
		<small><a href="/">Digital Collections</a> 
			&raquo; <a href="/<%=render_document_show_field_value(:document=>@document, :field=>"unit_code_tesim")%>"><%=render_document_show_field_value(:document=>@document, :field=>"unit_name_tesim")%></a>
			<!-- add collections here, when present? -->
			&raquo; <%=render_document_show_field_value(:document=>@document, :field=>"title_tesim") %>
		</small>
	</div>
</div>

<div class="row-fluid">
  <div id="content" class="show-document span9">
	
		<div class="row-fluid">
			<section class="dams-viewer span12">
				<%= render_document_heading(:h1).html_safe %>
				<% if @document['name_tesim'] != nil %>
					<p><strong><%= render_document_show_field_value(:document=>@document, :field=>"name_tesim") %></strong></p>
				<% end %>
				<%= render :partial => 'file_navigation' %>
			</section>
		</div>

		<div class="row-fluid">
			<section class="dams-metadata span12">
				<%= render :partial => 'metadata_alt' %>
			</section>
		</div>

	 </div>
	 <div class="span3">

		<div class="row-fluid">
			<section class="dams-sidebar span12">
				<%if @document['component_count_isi'] != nil   %>
					<%= render :partial => 'metadata_components_tree' %>
				<% end %>
				<%= render :partial => 'related_resources' %>
				<%# render :partial => 'catalog/show_tools' %>
			</section>
		</div>

	</div>
</div>

<div class="row-fluid">
	<section class="dams-comments span9">
		<%= render :partial => 'comments' %>
	</section>
</div>
