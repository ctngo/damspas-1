<%
	title = render :partial => 'shared/fields/title_simple'
	@page_title =  "Object | #{title}"
%>

<div class="row-fluid">
	<div class="dams-breadcrumbs span12">
		<ul class="breadcrumb">
			<li><a href="/">Digital Collections</a> <span class="divider">&raquo;</span></li>
			<li>
				<a href="/<%=render_document_show_field_value(:document=>@document, :field=>"unit_code_tesim")%>">
					<%=render_document_show_field_value(:document=>@document, :field=>"unit_name_tesim")%>
				</a>
				<span class="divider">&raquo;</span>
			</li>
			<li class="active"><%= title %></li>
		</ul>
	</div>
</div>

<div class="row-fluid">
  <div id="content" class="show-document span9">
	
		<div class="row-fluid">
			<section class="dams-viewer span12">
				<%= render :partial => 'shared/fields/title' %>
				<%= render :partial => 'file_navigation' %>
			</section>
		</div>

		<div class="row-fluid">
			<section class="dams-metadata span12">
				<%= render :partial => 'metadata' %>
			</section>
		</div>

	 </div>
	 <div class="span3">

		<div class="row-fluid">
			<section class="dams-sidebar span12">
				<%if @document['component_count_isi'] != nil   %>
					<%= render :partial => 'component_tree' %>
				<% end %>
				<%= render :partial => 'related_resources' %>
				<%# render :partial => 'catalog/show_tools' %>
			</section>
		</div>

	</div>
</div>

<div class="row-fluid">
	<section class="dams-comments span9">
		<%= render :partial => 'comments' %>
	</section>
</div>
