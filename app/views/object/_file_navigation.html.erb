@document['file_3.jpg_formatName_tesim'] == "JPEG"
-->

 
 <!-- render different viewer based on its format type -->   

 <div class="row-fluid">
  <div class="span12">    
      <% if @document['id_t'] != nil %> 


     <p> <%=render_document_show_field_value(:document=>@document, :field=>"file_1.tar.gz_formatName_tesim")%></P>
    
      <!-- distinguish simple object from complex object is simple object won't have component_count_isi -->
        <%if @document['component_count_isi'] != nil   %>
         <%= render :partial => 'complex_object_viewer' %> 

           <% elsif render_document_show_field_value(:document=>@document, :field=>"file_2.mp4_formatName_tesim") == "bytestream" %>
         <%= render :partial => 'video_viewer' %>

         <% elsif render_document_show_field_value(:document=>@document, :field=>"file_2.mp3_formatName_tesim") == "MP3" %>
        <%= render :partial => 'audio_viewer' %>

         <% elsif render_document_show_field_value(:document=>@document, :field=>"file_1.pdf_formatName_tesim") == "PDF" %>
        <%= render :partial => 'pdf_viewer' %>
        
        <% elsif render_document_show_field_value(:document=>@document, :field=>"file_1.tar.gz_formatName_tesim") == "GZIP" %>
        <%= render :partial => 'data_viewer' %>

        <% elsif render_document_show_field_value(:document=>@document, :field=>"file_3.jpg_formatName_tesim") == "JPEG" %>
        <%= render :partial => 'image_viewer' %>
        
        <% else %>
        <%= render :partial => 'default_viewer' %>
        <% end %>

  <% end %>
  </div>
</div>

        

 

