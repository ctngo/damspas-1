<h1><%= @mads_name.name.first %></h1>

<div>
  <dl>
    <dt>authority:</dt>
    <dd><%= @mads_name.authority.first %></dd>
    <dt>uri:</dt>
    <dd><%= @mads_name.valueURI.first %></dd>
  </dl>
  <% if can? :update, @mads_name %>
    <%= link_to "Solr View", mads_name_path(@mads_name), class: "btn btn-primary"%>
    <%= link_to "Edit", edit_mads_name_path(@mads_name), class: "btn btn-primary"%>
    <%= link_to "View All", mads_names_path(), class: "btn btn-primary"%>
  <% end %>
</div>
