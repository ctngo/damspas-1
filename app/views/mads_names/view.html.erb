<h1><%= @mads_name.name.first %></h1>

<div>
  <dl>
    <dt>FullNameElement:</dt>
    <dd><%= @mads_name.fullNameValue %></dd>
    <dt>FamilyNameElement:</dt>
    <dd><%= @mads_name.familyNameValue %></dd>
    <dt>GivenNameElement:</dt>
    <dd><%= @mads_name.givenNameValue %></dd>
    <dt>DateNameElement:</dt>
    <dd><%= @mads_name.dateNameValue %></dd>
    <dt>TermOfAddressNameElement:</dt>
    <dd><%= @mads_name.termOfAddressValue %></dd>                
    <dt>Scheme:</dt>
    <dd><%= @mads_name.scheme %></dd>
    <dt>ExternalAuthority:</dt>
    <dd><%= @mads_name.externalAuthority %></dd>
  </dl>
  <% if can? :update, @mads_name %>
    <%= link_to "Solr View", mads_name_path(@mads_name), class: "btn btn-primary"%>
    <%= link_to "Edit", edit_mads_name_path(@mads_name), class: "btn btn-primary"%>
    <%= link_to "View All", mads_names_path(), class: "btn btn-primary"%>
  <% end %>
</div>
