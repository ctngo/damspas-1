<% @page_title =  "Edit Name" %>

<div class="row-fluid">
	<div class="span10 offset1">
	
		<h2>Edit Name</h2>
		
		<%= form_for @mads_name do |f| %>
		
			<%= render 'error_messages', object: f.object %>
		
			<%= label_tag 'mads_name[name][]', "Name" %>
			<%= text_field_tag 'mads_name[name][]', @mads_name.name[0], class: "input-block-level" %>
		
			<%= label_tag 'mads_name[externalAuthority][]', "ExternalAuthority" %>
			<%= text_field_tag 'mads_name[externalAuthority][]', @mads_name.externalAuthority, class: "input-block-level" %>

			     <%= f.fields_for :scheme, include_id: false do |se| %>
		      <%= se.label :id, "Scheme" %>
		        <%= se.select :id, options_for_select(@mads_schemes , :selected => @scheme_id) , :prompt=>"Select MadsScheme" %>
		      <% end %>
		
		      <%= label_tag 'mads_name[fullNameElement_attributes][0][elementValue]', "Full Name" %>
		      <%= text_field_tag 'mads_name[fullNameElement_attributes][0][elementValue]', @mads_name.fullNameValue, class: "input-block-level" %>          
		
		      <%= label_tag 'mads_name[familyNameElement_attributes][0][elementValue]', "Family Name" %>
		      <%= text_field_tag 'mads_name[familyNameElement_attributes][0][elementValue]', @mads_name.familyNameValue, class: "input-block-level" %>          
		
		      <%= label_tag 'mads_name[givenNameElement_attributes][0][elementValue]', "Given Name" %>
		      <%= text_field_tag 'mads_name[givenNameElement_attributes][0][elementValue]', @mads_name.givenNameValue, class: "input-block-level" %>          
		
		      <%= label_tag 'mads_name[termsOfAddressNameElement_attributes][0][elementValue]', "Terms of Address" %>
		      <%= text_field_tag 'mads_name[termsOfAddressNameElement_attributes][0][elementValue]', @mads_name.termsOfAddressNameValue, class: "input-block-level" %>          
		
		      <%= label_tag 'mads_name[dateNameElement_attributes][0][elementValue]', "Dates" %>
		      <%= text_field_tag 'mads_name[dateNameElement_attributes][0][elementValue]', @mads_name.dateNameValue, class: "input-block-level" %>          
		
		      <%= label_tag 'mads_name[nameElement_attributes][0][elementValue]', "Other Name" %>
		      <%= text_field_tag 'mads_name[nameElement_attributes][0][elementValue]', @mads_name.nameValue, class: "input-block-level" %>          
			
			<div class="form-actions">
				<button type="submit" class="btn btn-primary pull-right">Save changes</button>
				<%= link_to "Cancel", mads_name_path(@mads_name), class: "btn btn-link pull-right" %>
			</div>
				
		
		<%end%>
	
	</div>
</div>
