<% @page_title =  "Edit Name" %>

<div class="row-fluid">
	<div class="span10 offset1">
	
		<h2>Edit Name</h2>
		
		<%= form_for @mads_name do |f| %>
		
			<%= render 'error_messages', object: f.object %>
		
			<%= label_tag 'mads_name[name][]', "Authoritative Label" %>
			<%= text_field_tag 'mads_name[name][]', @mads_name.name[0], class: "input-block-level" %>
		
			<%= label_tag 'mads_name[authority][]', "Authority" %>
			<%= text_field_tag 'mads_name[authority][]', @mads_name.authority[0], class: "input-block-level" %>

			<%= label_tag 'mads_name[valueURI]', "Value URI" %>
			<%= text_field_tag 'mads_name[valueURI]', @mads_name.valueURI, class: "input-block-level" %>
				
			<div class="form-actions">
				<button type="submit" class="btn btn-primary pull-right">Save changes</button>
				<%= link_to "Cancel", mads_name_path(@mads_name), class: "btn btn-link pull-right" %>
			</div>
				
		
		<%end%>
	
	</div>
</div>
