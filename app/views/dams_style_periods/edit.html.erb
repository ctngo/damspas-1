<% @page_title =  "Edit Style Period" %>

<div class="row-fluid">
	<div class="span10 offset1">
	
		<h2>Edit Style Period</h2>
		
		<%= form_for @dams_style_period do |f| %>
		
			<%= render 'error_messages', object: f.object %>
		
			<%= label_tag 'dams_style_period[name][]', "Authoritative Label" %>
			<%= text_field_tag 'dams_style_period[name][]', @dams_style_period.name[0], class: "input-block-level" %>
		
			<%= label_tag 'dams_style_period[externalAuthority][]', "ExternalAuthority" %>
			<%= text_field_tag 'dams_style_period[externalAuthority][]', @dams_style_period.externalAuthority, class: "input-block-level" %>

			<%= label_tag 'dams_style_period[scheme][]', "scheme" %>
			<%= select_tag 'dams_style_period[scheme][]', options_for_select(@mads_schemes, :selected => @scheme_id ) %>
			<%= label_tag 'dams_style_period[elementValue][]', "StylePeriodElement" %>
			<%= text_field_tag 'dams_style_period[elementValue][]', @dams_style_period.elementValue, class: "input-block-level" %>
							
			<div class="form-actions">
				<button type="submit" class="btn btn-primary pull-right">Save changes</button>
				<%= link_to "Cancel", dams_style_period_path(@dams_style_period), class: "btn btn-link pull-right" %>
			</div>
				
		
		<%end%>
	
	</div>
</div>
