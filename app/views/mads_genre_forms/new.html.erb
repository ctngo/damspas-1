<h1>Create a new MADS GenreForm</h1>
<%= form_for @mads_genre_form do |f| %>
	<%= render 'error_messages' %>
  <%= label_tag 'mads_genre_form[name]', "Name" %>
  <%= text_field_tag 'mads_genre_form[name]' %>
  <%= label_tag 'mads_genre_form[externalAuthority]', "ExternalAuthority" %>
  <%= url_field_tag 'mads_genre_form[externalAuthority]' %> 
  <%= f.fields_for :genreFormElement do |te| %>
    <%= te.label :elementValue, "Element Value" %>
    <%= te.text_field :elementValue %>
  <% end %>
  <br>
  <%= f.fields_for :scheme do |se| %>
    <%= se.label :id, "Scheme" %>
    <%= se.select :id, options_for_select(@mads_schemes) , :prompt=>"Select MadsScheme" %>
  <% end %>
  <br>

  <%=f.submit "Submit", class: "btn btn-primary" %>
<%end%>
