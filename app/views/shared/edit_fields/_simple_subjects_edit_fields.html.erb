<div class="fields">
<br/>
<% if selected_type.nil?%>
	<%= select_tag "#{object_type}[subjectType][]",  options_for_select(subjectTypeArray, :selected => "#{selected_type}") , :prompt=>"Select Subject Type" , :onChange=>"javascript: getSimpleSubjects(this,'#{object_type}','#simpleSubject','0');"%>
<% else %>
	<%= hidden_field_tag "#{object_type}[subjectType][]", "#{selected_type}" %>
	<script type="text/javascript">
	   getSimpleSubjects("<%= selected_type %>","<%= object_type %>","#simpleSubject<%= index %>","0","<%= selected_value %>");
	</script>
<% end %>
<div id="simpleSubject<%= index %>"></div>
</div>