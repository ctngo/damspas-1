	<%= f.select :id, options_for_select(@mads_languages, :selected => "#{Rails.configuration.id_namespace}#{@language_id}") , {:include_blank => 'Select Language'}, :required => "true", :class=>"newAttributeClass", :onChange=>"javascript: checkOption(this.id,true,'mads_languages');"%>    
