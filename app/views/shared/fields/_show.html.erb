<button class="btn btn-mini btn-link btn-block" type="button" data-toggle="collapse" data-target="#metadata-fold"><strong>Hide metadata</strong></button>
<section id="metadata-fold" class="collapse in">
  <dl class="dl-horizontal">

    <%= render :partial => 'shared/fields/relationships' %>
    <%= render :partial => 'shared/fields/note', :locals => {:type => 'performers'} %>
    <%= render :partial => 'shared/fields/date' %>
    <%= render :partial => 'shared/fields/note', :locals => {:type => 'extent'} %>
    <%= render :partial => 'shared/fields/note', :locals => {:type => 'abstract'} %>
    <%= render :partial => 'shared/fields/scopeOfContent' %>
    <%= render :partial => 'shared/fields/cartographic' %>
    <%= render :partial => 'shared/fields/note', :locals => {:type => 'tableOfContents'} %>
    <%= render :partial => 'shared/fields/note', :locals => {:exclude_type => ['performers','extent','abstract','tableOfContents','identifier','existence and location of originals','general physical description','dimensions','digitalOrigin'], :exclude_label => ['Digital object made available by'] } %>
    <%= render :partial => 'shared/fields/resource_type' %>
    <%= render :partial => 'shared/fields/note', :locals => {:type => 'identifier', :label => 'ARK'} %>
    <%= render :partial => 'shared/fields/note', :locals => {:type => 'identifier', :label => 'ARK ID'} %>
    <%= render :partial => 'shared/fields/note', :locals => {:type => 'existence and location of originals'} %>
    <%= render :partial => 'shared/fields/note', :locals => {:type => 'identifier', :label => 'negative'} %>
    <%= render :partial => 'shared/fields/note', :locals => {:type => 'general physical description'} %>
    <%= render :partial => 'shared/fields/note', :locals => {:type => 'dimensions'} %>

    <%= render :partial => 'shared/fields/conference_name' %>
    <%= render :partial => 'shared/fields/corporate_name' %>
    <%= render :partial => 'shared/fields/family_name' %>
    <%= render :partial => 'shared/fields/personal_name' %>
    <%= render :partial => 'shared/fields/subject' %>
    <%= render :partial => 'shared/fields/built_work_place' %>
    <%= render :partial => 'shared/fields/cultural_context' %>
    <%= render :partial => 'shared/fields/function' %>
    <%= render :partial => 'shared/fields/genre_form' %>
    <%= render :partial => 'shared/fields/geographic' %>
    <%= render :partial => 'shared/fields/iconography' %>
    <%= render :partial => 'shared/fields/occupation' %>
    <%= render :partial => 'shared/fields/scientific_name' %>
    <%= render :partial => 'shared/fields/style_period' %>
    <%= render :partial => 'shared/fields/technique' %>
    <%= render :partial => 'shared/fields/temporal' %>
    <%= render :partial => 'shared/fields/topic' %>

    <%= render :partial => 'shared/fields/collection' %>
    <%= render :partial => 'shared/fields/related_resource' %>
    <%= render :partial => 'shared/fields/note', :locals => {:label => 'Digital object made available by'} %>
    <%= render :partial => 'shared/fields/preferred_citation_note' %>
    <%= render :partial => 'shared/fields/copyright' %>
    <%= render :partial => 'shared/fields/note', :locals => {:type => 'digitalOrigin'} %>
    <%= render :partial => 'shared/fields/unit' %>

    <!-- curator-only -->
    <% if can? :update, @document %>
      <p>Curator-Only</p>
      <!-- internalOnly -->
      <%= render :partial => 'shared/fields/note', :locals => {:type => 'identifier', :exclude_label => ['ARK','ARK ID','negative','filename','local','roger','oclc']} %>
      <%= render :partial => 'shared/fields/note', :locals => {:type => 'identifier', :label => 'filename'} %>
      <%= render :partial => 'shared/fields/note', :locals => {:type => 'identifier', :label => 'local'} %>
      <%= render :partial => 'shared/fields/note', :locals => {:type => 'identifier', :label => 'roger'} %>
      <%= render :partial => 'shared/fields/note', :locals => {:type => 'identifier', :label => 'oclc'} %>
    <% end %>

    <!-- not displayed -->
    <p>Not Specified</p>
    <%= render :partial => 'shared/fields/language' %>
    <%= render :partial => 'shared/fields/custodial_responsibility_note' %>
    <%= render :partial => 'shared/fields/license' %>
    <%= render :partial => 'shared/fields/statute' %>
    <%= render :partial => 'shared/fields/other_rights' %>
    <%= render :partial => 'shared/fields/rights_holder' %>
  </dl>
</section>
