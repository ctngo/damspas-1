<% @page_title =  "Edit Conference Name" %>

<div class="row-fluid">
	<div class="span10 offset1">
	
		<h2>Edit Conference Name</h2>
		
		<%= form_for @mads_conference_name do |f| %>
		
			<%= render 'error_messages', object: f.object %>
		
			<%= label_tag 'mads_conference_name[name][]', "Authoritative Label" %>
			<%= text_field_tag 'mads_conference_name[name][]', @mads_conference_name.name[0], class: "input-block-level" %>
		
			<%= label_tag 'mads_conference_name[authority][]', "Authority" %>
			<%= text_field_tag 'mads_conference_name[authority][]', @mads_conference_name.authority[0], class: "input-block-level" %>

			<%= label_tag 'mads_conference_name[valueURI][]', "URI" %>
			<%= text_field_tag 'mads_conference_name[valueURI][]', @mads_conference_name.valueURI[0], class: "input-block-level" %>
				
			<div class="form-actions">
				<button type="submit" class="btn btn-primary pull-right">Save changes</button>
				<%= link_to "Cancel", mads_conference_name_path(@mads_conference_name), class: "btn btn-link pull-right" %>
			</div>
				
		
		<%end%>
	
	</div>
</div>
