<h1><%= @mads_conference_name.name.first %></h1>

<div>
  <dl>
    <dt>NameElement:</dt>
    <dd><%= @mads_conference_name.nameValue %></dd>                
    <dt>DateNameElement:</dt>
    <dd><%= @mads_conference_name.dateNameValue %></dd>
    <dt>Scheme:</dt>
    <dd><%= @mads_conference_name.scheme %></dd>
    <dt>ExternalAuthority:</dt>
    <dd><%= @mads_conference_name.externalAuthority %></dd>
  </dl>
  <% if can? :update, @mads_conference_name %>
    <%= link_to "Solr View", mads_conference_name_path(@mads_conference_name), class: "btn btn-primary"%>
    <%= link_to "Edit", edit_mads_conference_name_path(@mads_conference_name), class: "btn btn-primary"%>
    <%= link_to "View All", mads_conference_names_path(), class: "btn btn-primary"%>
  <% end %>
</div>
