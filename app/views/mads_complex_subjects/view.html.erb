<h1><%= @mads_complex_subject.name.first %></h1>

<div>
  <dl>
    <dt>ExternalAuthority:</dt>
    <dd><%= @mads_complex_subject.externalAuthority.first %></dd>
	<% cList = @mads_complex_subject.componentList
		i = 0
		if cList != nil
			while i < cList.size  do
				fieldLabel = cList[i].class.name.gsub("Mads", "").gsub("Internal", "")
				fieldLabel = fieldLabel[0, 1].downcase + fieldLabel[1..-1]
				if (fieldLabel == "name")
					fieldLabel = "genericName"
				end
				%>
				
					<dt><%= "#{fieldLabel[0, 1].upcase + fieldLabel[1..-1]}" %></dt>
					<dd><%= cList[i].name.first%></dd>
				<%
				i +=1
			end
		end %>       
  </dl>

  <input type="hidden" id="id" value="<%= @mads_complex_subject.id%>"/>
  <input type="hidden" id="name" value="<%= @mads_complex_subject.name.first%>"/>
  <br>
  <% if(!params[:parent_id].nil?) %>
  	<a href="#" onClick="javascript: setParentId_generic('<%= params[:parent_id]%>',true);">close</a>
  <% end %>
  <% if(!params[:parent_class].nil?) %>
  	<a href="#" onClick="javascript: setParentId_generic('<%= params[:parent_class]%>',false);">close</a>
  <% end %> 
    
  <%# if can? :update, @mads_complex_subject %>
    <%#= link_to "Solr View", mads_complex_subject_path(@mads_complex_subject), class: "btn btn-primary"%>
    <%#= link_to "Edit", edit_mads_complex_subject_path(@mads_complex_subject), class: "btn btn-primary"%>
    <%#= link_to "View All", mads_complex_subjects_path(), class: "btn btn-primary"%>
  <%# end %>
</div>
