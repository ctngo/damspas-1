<h1>Create a new MADS Complex Subject</h1>
<%= form_for @mads_complex_subject do |f| %>
	<%= render 'error_messages' %>
  <%= label_tag 'mads_complex_subject[name]', "Name" %>
  <%= text_field_tag 'mads_complex_subject[name]' %>
	<%= label_tag 'mads_complex_subject[authority]', "Code" %>
  <%= text_field_tag 'mads_complex_subject[authority]' %>
  <%= label_tag 'mads_complex_subject[valueURI]', "URI" %>
  <%= url_field_tag 'mads_complex_subject[valueURI]' %>
  <br>

  <%=f.submit "Submit", class: "btn btn-primary" %>
<%end%>
