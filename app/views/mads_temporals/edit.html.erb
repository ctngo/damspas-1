<% @page_title =  "Edit Temporal" %>

<div class="row-fluid">
	<div class="span10 offset1">
	
		<h2>Edit Temporal</h2>
		
		<%= form_for @mads_temporal do |f| %>
		
			<%= render 'error_messages', object: f.object %>
		
			<%= label_tag 'mads_temporal[name]', "Name" %>
			<%= text_field_tag 'mads_temporal[name]', @mads_temporal.name[0], class: "input-block-level" %>
		
			<%= label_tag 'mads_temporal[externalAuthority]', "ExternalAuthority" %>
			<%= text_field_tag 'mads_temporal[externalAuthority]', @mads_temporal.externalAuthority, class: "input-block-level" %>

			<%= label_tag 'mads_temporal[scheme_attributes][0][id]', "scheme" %>
			<%= select_tag 'mads_temporal[scheme_attributes][0][id]', options_for_select(MadsScheme.all.collect{ |s| [s.name.first, Rails.configuration.id_namespace+s.pid] }, :selected => @scheme_id ) %>

			<%# <%= label_tag      'mads_temporal[elementList_attributes][0][temporalElement_attributes][0][elementValue][]', "Element Value" %>

			<%# <%= text_field_tag 'mads_temporal[elementList_attributes][0][temporalElement_attributes][0][elementValue][]', @mads_temporal.elementList[0].first.elementValue.first, class: "input-block-level" %>

	        <%= f.fields_for :temporalElement do |te| %>
	         	<%= te.label :elementValue, "Element Value" %>
	        	<%= te.text_field :elementValue, class: "input-block-level" %>
	        <% end %>
							
			<div class="form-actions">
				<button type="submit" class="btn btn-primary pull-right">Save changes</button>
				<%= link_to "Cancel", mads_temporal_path(@mads_temporal), class: "btn btn-link pull-right" %>
			</div>
				
		
		<%end%>
	
	</div>
</div>
