<h1><%= @dams_built_work_place.name.first %></h1>

<div>
  <dl>
    <dt>BuiltWorkPlaceElement:</dt>
    <dd><%= @dams_built_work_place.elementList[0].elementValue %></dd>
    <dt>Scheme:</dt>
    <dd><%= @dams_built_work_place.scheme.first.pid %></dd>
    <dt>ExternalAuthority:</dt>
    <dd><%= @dams_built_work_place.externalAuthority %></dd>
  </dl>
  <% if can? :update, @dams_built_work_place %>
    <%= link_to "Solr View", dams_built_work_place_path(@dams_built_work_place), class: "btn btn-primary"%>
    <%= link_to "Edit", edit_dams_built_work_place_path(@dams_built_work_place), class: "btn btn-primary"%>
    <%= link_to "View All", dams_built_work_places_path(), class: "btn btn-primary"%>
  <% end %>
</div>
