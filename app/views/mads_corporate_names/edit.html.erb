<% @page_title =  "Edit Corporate Name" %>

<div class="row-fluid">
	<div class="span10 offset1">
	
		<h2>Edit Corporate Name</h2>
		
		<%= form_for @mads_corporate_name do |f| %>
		
			<%= render 'error_messages', object: f.object %>
		
			<%= label_tag 'mads_corporate_name[name][]', "Name" %>
			<%= text_field_tag 'mads_corporate_name[name][]', @mads_corporate_name.name[0], class: "input-block-level" %>
		
			<%= label_tag 'mads_corporate_name[nameValue][]', "NameElement" %>
			<%= text_field_tag 'mads_corporate_name[nameValue][]', @mads_corporate_name.nameValue, class: "input-block-level" %>
			<%= label_tag 'mads_corporate_name[dateNameValue][]', "DateNameElement" %>
			<%= text_field_tag 'mads_corporate_name[dateNameValue][]', @mads_corporate_name.dateNameValue, class: "input-block-level" %>
			<%= label_tag 'mads_corporate_name[externalAuthority][]', "ExternalAuthority" %>
			<%= text_field_tag 'mads_corporate_name[externalAuthority][]', @mads_corporate_name.externalAuthority, class: "input-block-level" %>
			<%= label_tag 'mads_corporate_name[scheme][]', "scheme" %>
			<%= select_tag 'mads_corporate_name[scheme][]', options_for_select(MadsScheme.all.collect{ |s| [s.name.first, s.pid] }, :selected => @scheme_id ) %>
				
			<div class="form-actions">
				<button type="submit" class="btn btn-primary pull-right">Save changes</button>
				<%= link_to "Cancel", mads_corporate_name_path(@mads_corporate_name), class: "btn btn-link pull-right" %>
			</div>
				
		
		<%end%>
	
	</div>
</div>
