<h1><%= @mads_corporate_name.name.first %></h1>

<div>
  <dl>
    <dt>FullNameElement:</dt>
    <dd><%= @mads_corporate_name.fullNameValue %></dd>
    <dt>FamilyNameElement:</dt>
    <dd><%= @mads_corporate_name.familyNameValue %></dd>
    <dt>GivenNameElement:</dt>
    <dd><%= @mads_corporate_name.givenNameValue %></dd>
    <dt>DateNameElement:</dt>
    <dd><%= @mads_corporate_name.dateNameValue %></dd>
    <dt>TermOfAddressNameElement:</dt>
    <dd><%= @mads_corporate_name.termsOfAddressNameValue %></dd>                
    <dt>NameElement:</dt>
    <dd><%= @mads_corporate_name.nameValue %></dd>                
    <dt>Scheme:</dt>
    <dd><%= link_to Rails.configuration.id_namespace + @mads_corporate_name.scheme.first.pid, mads_scheme_path(@mads_corporate_name.scheme.first.pid) %></dd>
    <dt>ExternalAuthority:</dt>
    <dd><%= link_to @mads_corporate_name.externalAuthority.first %></dd>
  </dl>
  <%= render :partial => 'shared/edit_fields/view_form_hidden_fields' , :locals => {:object => @mads_corporate_name, :parent_id => params[:parent_id], :parent_class => params[:parent_class]}%>
</div>
