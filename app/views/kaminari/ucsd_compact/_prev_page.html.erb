<%# Link to the "First" and "Previous" pages
  - available local variables
    url:           url to the previous page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>

<%
   bsBtnClass = 'btn'
	 bsBtnClass = bsBtnClass << ' disabled' if current_page.first?
%>

<%= link_to raw('<i class="glyphicon glyphicon-backward"></i> Previous'), url, :title => 'Previous page',  :rel => 'prev', :remote => remote, :class => bsBtnClass %>
