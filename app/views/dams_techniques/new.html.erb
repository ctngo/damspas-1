<h1>Create a new Dams Technique</h1>
<%= form_for @dams_technique do |f| %>
  <%= render 'error_messages' %>
  <%= label_tag 'dams_technique[name]', "Name" %>
  <%= text_field_tag 'dams_technique[name]' %>
  <%= label_tag 'dams_technique[externalAuthority]', "ExternalAuthority" %>
  <%= url_field_tag 'dams_technique[externalAuthority]' %> 
  
  <%= f.fields_for :techniqueElement do |te| %>
    <%= te.label :elementValue, "Element Value" %>
    <%= te.text_field :elementValue %>
  <% end %>
  <br>
  <%= f.fields_for :scheme do |se| %>
    <%= se.label :id, "Scheme" %>
    <%= se.select :id, options_for_select(@mads_schemes) , :prompt=>"Select MadsScheme" %>
  <% end %>
  <br>

  <%=f.submit "Submit", class: "btn btn-primary" %>
<%end%>
