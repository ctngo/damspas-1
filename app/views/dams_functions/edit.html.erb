<% @page_title =  "Edit Function" %>

<div class="row-fluid">
	<div class="span10 offset1">
	
		<h2>Edit Function</h2>
		
		<%= form_for @dams_function do |f| %>
		
			<%= render 'error_messages', object: f.object %>
		
			<%= label_tag 'dams_function[name][]', "Authoritative Label" %>
			<%= text_field_tag 'dams_function[name][]', @dams_function.name[0], class: "input-block-level" %>
		
			<%= label_tag 'dams_function[externalAuthority][]', "ExternalAuthority" %>
			<%= text_field_tag 'dams_function[externalAuthority][]', @dams_function.externalAuthority, class: "input-block-level" %>

			<%= label_tag 'dams_function[scheme][]', "scheme" %>
			<%= select_tag 'dams_function[scheme][]', options_for_select(@mads_schemes, :selected => @scheme_id ) %>
			<%= label_tag 'dams_function[elementValue][]', "FunctionElement" %>
			<%= text_field_tag 'dams_function[elementValue][]', @dams_function.elementValue, class: "input-block-level" %>
							
			<div class="form-actions">
				<button type="submit" class="btn btn-primary pull-right">Save changes</button>
				<%= link_to "Cancel", dams_function_path(@dams_function), class: "btn btn-link pull-right" %>
			</div>
				
		
		<%end%>
	
	</div>
</div>
