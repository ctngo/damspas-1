<h1><%= @dams_assembled_collection.title %></h1>
<dl>
  <dt>Title</dt>
  <dd>
    <%= @dams_assembled_collection.title %>
  </dd>
  <dt>TitleType</dt>
  <dd>
    <%= @dams_assembled_collection.titleType %>
  </dd>
  <dt>BeginDate</dt>
  <dd>
    <%= @dams_assembled_collection.beginDate %>
  </dd>
  <dt>Note</dt>
  <dd>
    <%= @dams_assembled_collection.note %>
  </dd>
  <dt>Note Display Label</dt>
  <dd>
    <%= @dams_assembled_collection.noteDisplayLabel %>
  </dd>
  <dt>Note Type</dt>
  <dd>
    <%= @dams_assembled_collection.noteType %>
  </dd>

<% if(@damsL) %>
  <dt>Language</dt>
  <dd>
     <%= @damsL.language %>
  </dd>
  <dt>Language Code:</dt>
  <dd>
     <%= @damsL.code %>
  </dd>
<% end %>
</dl>

<h2>Create New Dams Object</h2>
<%= form_for @dams_object do |f| %>
  <%= f.hidden_field :dams_assembled_collection_id %>

  Title<%= f.text_field :title %>
 <br>
  Related Title<%= f.text_field :relatedTitle %>
  <br>
 Related Title Language<%= f.text_field :relatedTitleLang %>
 <br> 
 
 Related Title Type <%= f.text_field :relatedTitleType %>
  <br>
 Begin Date <%= f.text_field :beginDate %>
 <br>
 End Date <%= f.text_field :endDate %>
  <br>
 Date <%= f.text_field :date %>
  <br>
  Language<%= f.select(:languageId, options_from_collection_for_select(@dams_langs, :id, :language) , :prompt => 'Select Language') %>
  <br>
 TypeOfResource <%= f.text_field :typeOfResource %>
 <br>
 RelatedResourceType <%= f.text_field :relatedResourceType %>
 <br>
 RelatedResourceDesc <%= f.text_field :relatedResourceDesc %>
 <br>
 RelatedResourceUri <%= f.text_field :relatedResourceUri %>
 <br>
 RelationshipRole <%= f.text_field :relationshipRole %>
 <br>
 RelationshipName <%= f.text_field :relationshipName %>
 <br>
 AssembledCollection <%= f.text_field :assembledCollection %>
 <br>
  <%= f.submit "Save" %>

<% end %>

<h2>Dams Objects</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <td>ID</td>
      <td>Title</td>
      <td>Related Title</td>
      <td>Related Title Type</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
  </thead>

  <tbody>
    <% @dams_assembled_collection.dams_objects.each do |dams_object| %>

      <tr>
        <td class="zombie_nickname"><%= dams_object.id%></td>
        <td class="zombie_name"><%= link_to dams_object.title, dams_object_path(dams_object) %></td>
        <td class="zombie_name"><%= dams_object.relatedTitle%></td>
        <td class="zombie_name"><%= dams_object.relatedTitleType%></td>
        <td class="zombie_edit"><%= link_to "Edit", edit_dams_object_path(dams_object) %></td>
        <td>
          <%= link_to "Delete", dams_object_path(dams_object), :method => "delete" %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>


